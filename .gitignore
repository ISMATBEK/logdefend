import time
import os

def monitor_log(file_path, keyword=None):
    print(f"\nğŸ“ Monitoring: {file_path}")
    print(f"ğŸ” Keyword filter: {keyword if keyword else 'None'}")
    
    try:
        with open(file_path, "r") as f:
            f.seek(0, os.SEEK_END)  # Move to the end of file

            while True:
                line = f.readline()
                if not line:
                    time.sleep(0.5)
                    continue

                if keyword:
                    if keyword.lower() in line.lower():
                        print(f"âš ï¸ {line.strip()}")
                else:
                    print(f"{line.strip()}")
    except FileNotFoundError:
        print("âŒ Log file not found.")
    except KeyboardInterrupt:
        print("\nğŸ›‘ Monitoring stopped.")
    except Exception as e:
        print(f"âš ï¸ Error: {e}")

if __name__ == "__main__":
    print("ğŸ“Š logdefend â€” Real-time Log Monitoring Tool")
    path = input("ğŸ“„ Enter log file path: ")
    keyword = input("ğŸ” Enter keyword to filter (leave blank for all): ")
    monitor_log(path, keyword if keyword.strip() != "" else None)

